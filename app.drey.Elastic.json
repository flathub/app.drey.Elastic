{
    "app-id": "app.drey.Elastic",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "app.drey.Elastic",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "template-glib",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=enabled",
                "-Dvapi=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/template-glib/3.38/template-glib-3.38.0.tar.xz",
                    "sha256": "40d00dc223dcf2eb7f2ec422f7dec5a67373a0ca1101abca0f49c62f050cb312",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "template-glib",
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name": "elastic",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/elastic.git",
                    "tag": "1.0",
                    "commit": "cf1f99af9b6f30a05380b0a23f91d2a3bf632907",
                    "x-checker-data": {
                        "type": "git",
                        "name": "^([\\d.])$"
                    }
                }
            ]
        }
    ]
}
